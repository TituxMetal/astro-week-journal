---
export interface Props extends astroHTML.JSX.InputHTMLAttributes {
  type?: 'text' | 'email' | 'password' | 'number' | 'date'
  name: string
  value?: string
  id?: string
  placeholder?: string
  required?: boolean
  class?: string
}

const {
  type = 'text',
  name,
  value = '',
  id,
  placeholder,
  required = false,
  class: className = ''
} = Astro.props
---

<input
  type={type}
  name={name}
  placeholder={placeholder}
  value={value}
  required={required}
  id={id}
  class={`w-full px-3 py-2 text-zinc-300 border rounded-lg focus:outline-none focus:border-blue-500 ${className}`}
/>
